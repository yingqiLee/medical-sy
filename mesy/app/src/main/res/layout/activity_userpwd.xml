<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".allaboutmy.userpwd">


    <RelativeLayout
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/usermsgLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/logotest" />

        <TextView
            android:layout_width="137dp"
            android:layout_height="30dp"
            android:layout_below="@id/usermsgLogo"
            android:text="13357306868"
            android:id="@+id/numTv"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textStyle="bold"/>



        <RelativeLayout
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_centerHorizontal="true"
            android:id="@+id/msg"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numTv">

            <EditText
                android:layout_centerHorizontal="true"
                android:id="@+id/userMsgNum"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_below="@+id/userMsgLogo"
                android:hint="请输入手机号"
                android:paddingTop="3dp"
                android:textSize="16dp" />

            <Button
                android:id="@+id/userGetMsg"
                android:layout_width="330dp"
                android:layout_height="38dp"
                android:layout_below="@id/userMsgNum"
                android:layout_centerHorizontal="true"
                android:background="@color/theme"
                android:layout_marginTop="19dp"
                android:text="确定"
                android:textColor="#fff"
                android:textSize="18dp" />


            <com.example.medsy.allaboutmy.PwdEditText
                android:id="@+id/p"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/userSignup"
                android:layout_marginTop="5dp"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:background="@color/theme"
                android:text="登录"
                android:layout_below="@+id/p"
                android:textColor="#fff"
                android:textSize="18dp" />





        </RelativeLayout>




    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>


