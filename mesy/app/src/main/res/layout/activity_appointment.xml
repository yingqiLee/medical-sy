<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/zj"
        android:background="@drawable/reline"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="150dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/zjImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/zhuanjia"/>
        <TextView
            android:id="@+id/zjText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/zjImg"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:text="专家推荐"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/yy"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@drawable/reline"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/zj">
        <ImageView
            android:id="@+id/yyImg"
            android:src="@drawable/doctor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/yyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院排名"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/yyImg"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gh"
        android:background="@drawable/reline"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/yy">
        <ImageView
            android:id="@+id/ghImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/doctor"/>
        <TextView
            android:id="@+id/ghText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:text="挂号"
            android:layout_toRightOf="@+id/ghImg" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wzdt"
        android:background="@drawable/reline"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/gh">
            <ImageView
                android:id="@+id/wzdtImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/doctor"/>
            <TextView
                android:id="@+id/wzdtText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:text="问诊大厅"
                android:layout_toRightOf="@+id/wzdtImg" />
    </RelativeLayout>
</RelativeLayout>