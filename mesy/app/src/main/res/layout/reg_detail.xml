<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/reg_det_biaoti"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/jiantou"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约挂号"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/reg_det_biaoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reg_det_doctor"
        android:layout_below="@+id/reg_det_biaoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/reg_det_img"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20sp"
            android:layout_width="76dp"
            android:layout_height="56dp"
            android:src="@drawable/reg_doc"/>
        <TextView
            android:id="@+id/reg_det_name"
            android:layout_toRightOf="@+id/reg_det_img"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yishenga"
            />
        <TextView
            android:layout_toRightOf="@+id/reg_det_name"
            android:id="@+id/red_doc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"
            android:text="zhurenyishi"/>
        <TextView
            android:layout_toRightOf="@+id/reg_det_img"
            android:layout_below="@+id/reg_det_name"
            android:id="@+id/reg_doc_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shanchangtangniaobing"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reg_det_hospital"
        android:layout_below="@+id/reg_det_doctor"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/reg_det_hosname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yiyuana"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@+id/reg_det_hosname"
            android:id="@+id/reg_det_hoskeshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kehsi"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@+id/reg_det_hoskeshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可预约"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <View

        android:layout_below="@+id/reg_det_hospital"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        />
    <ListView
        android:layout_below="@+id/reg_det_hospital"
        android:id="@+id/reg_det_TimeList"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <Button
        android:layout_marginTop="35dp"
        android:background="@drawable/taskbutton"
        android:text="在线咨询"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/reg_det_TimeList"
        android:id="@+id/reg_button"
        android:layout_width="300dp"
        android:layout_height="50dp"/>
</RelativeLayout>